<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ninja.taskbook" >

    <uses-permission android:name="android.permission.ACCESS_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.Light" >
        <provider
            android:name=".model.database.TBContentProvider"
            android:authorities="database" >
        </provider>

        <activity
            android:name=".controller.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".model.notification.TBNotificationService"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" >
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <activity
            android:name=".controller.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Base.Theme.Light" >
        </activity>
    </application>

</manifest>
